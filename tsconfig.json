{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./"
  },
  "include": [
    "src/stories/**/*.ts",
    "src/stories/**/*.tsx",
    "src/stories/**/*.mdx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
